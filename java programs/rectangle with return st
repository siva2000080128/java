public class Rectangle
{
    int l=10;
    int b=8;
    int Area()
    {
        int area;
        area=l*b;
        return area;
    }
    int Perimeter()
    {
        int perimeter;
        perimeter=2*(l+b);
        return perimeter;
    }
    public static void main(String args[])
    {
        Rectangle siva=new Rectangle();
        siva.Area();
        siva.Perimeter();
    }
}
